@model List<Produit>
@*@{
        Layout = "_SpecialLayout";
    }*@

<h1 class="row">
    Accueil Catalogue de Produits
</h1>
<form class="row m-1" asp-controller="Produit" asp-action="Index" method="get">
    <input type="text" name="search" placeholder="Votre recherche..." class="col-9 p-1 form-control" />
    <button type="submit" class="btn btn-warning p-1 col-3">Rechercher</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Article</th>
            <th scope="col">Catégorie</th>
            <th scope="col">Prix</th>
            <th scope="col">Stock</th>
            <th scope="col">Image</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @*@foreach (Contact c in ViewData["listeContacts"] as List<Contact>)*@
        @*@foreach (Contact c in ViewBag.ListePersonnes)*@
        @foreach (Produit p in Model)
        {
        <tr>
            <th scope="row">@p.Id</th>
            <td>@p.Article</td>
            <td>@p.Categorie</td>
            <td>@p.Prix</td>
            <td>@p.Stock</td>
            <td>@p.Url</td>
            <td><a asp-controller="Produit" asp-action="Detail" asp-route-id="@p.Id">Detail</a></td>
            <td><a asp-controller="Produit" asp-action="ConfirmDelete" asp-route-id="@p.Id">Supprimer</a></td>
            <td><a asp-controller="Produit" asp-action="Form" asp-route-id="@p.Id">Modifier</a></td>
        </tr>
        }

    </tbody>
</table>
